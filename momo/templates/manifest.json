{
  "manifest_version": 3,
  "name": "momo",
  "version": "1.0",
  "description": "...",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo.jpg" 
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.google.com/*"],
      "js": ["script.js"]
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["setting.html", "setting_styles.css", "../templates/images/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
